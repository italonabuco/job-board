    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "graphql": "^16.6.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "nanoid": "^4.0.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "4.0.0",
    "@graphql-codegen/typescript": "4.0.0",
    "@graphql-codegen/typescript-resolvers": "4.0.0",
    "@tsconfig/node18": "^2.0.0",
    "@types/cors": "^2.8.13",
    "concurrently": "^8.1.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
